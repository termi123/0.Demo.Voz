                android:id="@+id/tvDoujin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF6600"
                android:textStyle="bold" />

            <TextView
